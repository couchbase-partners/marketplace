    default: false
  asia-northeast3:
    type: boolean
    default: false
  asia-northeast2:
    type: boolean
    default: false
  asia-east2:
    type: boolean
    default: false
  southamerica-east1:
    type: boolean
    default: false
  asia-south1:
    type: boolean
    default: false
    
  defaultZone:
    type: string
    default: us-central1-f
    x-googleProperty:
      type: GCE_ZONE

  syncGatewayNodeCount:
    type: integer
    default: 2
    minimum: 0
    maximum: 100
  syncGatewayNodeType:
    type: string
    default: n1-standard-4
    x-googleProperty:
      type: GCE_MACHINE_TYPE
      zoneProperty: defaultZone
  syncGatewayDiskSize:
    type: integer
    minimum: 20
    default: 20
  syncGatewayVersion:
    type: string
    default: 3.0.5
    enum:
      - 3.0.5
      - 3.0.4
      - 3.0.3
      - 2.8.3
      - 2.8.2
      - 2.8.0
