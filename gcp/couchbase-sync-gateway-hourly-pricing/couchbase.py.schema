      - 2.1.1
      - 2.1.0
      - 2.0.0
      - 2.0.2
      - 2.0.3
      - 1.5.1
      - 1.5.2
  couchbaseConnectionstring:
    type: string
  couchbaseUsername:
    type: string
  couchbasePassword:
    type: string
  couchbaseBucketName:
    type: string
outputs:
  couchbaseUsername:
    type: string
  couchbasePassword:
    type: string
