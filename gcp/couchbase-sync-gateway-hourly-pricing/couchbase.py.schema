imports:
  - path: deployment.py
  - path: cluster.py
  - path: group.py
  - path: naming.py

required:
  - couchbaseConnectionstring
  - couchbaseUsername
  - couchbasePassword
  - couchbaseBucketName
  - syncGatewayNodeCount
  - syncGatewayNodeType
  - syncGatewayDiskSize
  - syncGatewayVersion

properties:
  us-central1:
    type: boolean
    default: true
  us-west1:
    type: boolean
    default: false
  us-east1:
    type: boolean
    default: false
  us-east4:
    type: boolean
    default: false
  europe-west1:
    type: boolean
    default: false
  europe-west2:
    type: boolean
    default: false
  europe-west3:
    type: boolean
    default: false
  asia-southeast1:
    type: boolean
    default: false
  asia-east1:
    type: boolean
    default: false
  asia-northeast1:
    type: boolean
    default: false
  australia-southeast1:
    type: boolean
    default: false
  us-west4:
    type: boolean
    default: false
  us-west2:
    type: boolean
    default: false  
  us-west3:
    type: boolean
    default: false
  northamerica-northeast1:
    type: boolean
    default: false
  europe-central2:
    type: boolean
    default: false
  europe-north1:
    type: boolean
    default: false
  europe-west6:
    type: boolean
    default: false
  asia-southeast2:
