        "SyncGatewayInstanceType": {
            "Description": "Instance type for Couchbase Sync Gateway Nodes",
            "Type": "String",
            "Default": "m5.large",
            "AllowedValues": [
                "c5n.xlarge",
                "t3.medium",
                "t3.large",
                "t3.xlarge",
